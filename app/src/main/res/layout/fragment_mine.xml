<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/common_margin"
            android:paddingVertical="40dp"
            android:background="#F8F6F6">

            <androidx.cardview.widget.CardView
                android:id="@+id/avator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ls" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toEndOf="@id/avator"
                android:gravity="center_vertical"
                android:text="下午好！\n神奇的破折号"
                android:textColor="@color/ls_blue"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:drawableTop="@drawable/ic_notifications_24"
                android:text="我的通知"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/collection"
                android:layout_alignParentEnd="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:drawableTop="@drawable/ic_star_30"
                android:text="我的收藏"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_horizontal_margin">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:drawableLeft="@drawable/ic_text_format_24"
                android:text="字号设置"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#0000"
                android:src="@drawable/ic_arrow_right_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_horizontal_margin">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:drawableLeft="@drawable/ic_headset2"
                android:text="语音设置"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:src="@drawable/ic_arrow_right_24"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_horizontal_margin">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:drawableLeft="@drawable/ic_help_24"
                android:text="帮助与反馈"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:src="@drawable/ic_arrow_right_24"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_horizontal_margin">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:drawableLeft="@drawable/ic_settings_30"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:src="@drawable/ic_arrow_right_24"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>